<section class="main-header">
  <h1>Rubitter</h1>
</section>

<div class="list">
  <p id="notice"><%= notice %></p>

  <h1>Murmurs List</h1>
<div>
  <table class="table">
    <thead>
      <tr>
        <th>Content</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @murmurs.each do |murmur| %>
        <tr>
          <td><%= murmur.content %></td>
          <td><%= link_to 'Show', murmur %></td>
          <td><%= link_to 'Edit', edit_murmur_path(murmur) %></td>
          <td><%= link_to 'Destroy', murmur, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<div>
  <br>

  <%= link_to 'New Murmur', new_murmur_path %>
</div>
